#!/bin/bash
sbcnname=$KEYVAULT_0_SUBSCRIPTION
kvname=$KEYVAULT_0_NAME

if [[ -z $name ]]; then
  echo "please enter secret name (--name) it's mandatory parameter"
  exit 0
fi

echo 'please enter secret value:'
read value
echo "entered: $value"

az keyvault secret set \
  --subscription "$sbcnname" \
  --vault-name "$kvname" \
  --value "$value" \
  --name "$name"
