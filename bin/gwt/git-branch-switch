#!/bin/bash
if [[ $# -eq 1 ]]; then
    selected=$1
else

  activelocal=$(git worktree list | sed -e 's/^.*\[//' | sed -e 's/\]$//')
  # currentbranch=$(git branch | grep "*" | sed -e 's/* //')

  selected=$(printf "$activelocal\n$currentbranch" | sort | uniq -u | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

path=$(git worktree list | grep "$selected" | sed -e 's/ .*$//')

root=${path/${selected}//}

echo $path
echo $root

exit

if [[ -d $path ]]; then
  echo cd
  # cd $path
  selected_name=$selected
  tmux_running=$(pgrep tmux)

  if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $path
    exit 0
  fi

  if ! tmux has-session -t $selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $path
  fi

  tmux switch-client -t $selected_name

fi
